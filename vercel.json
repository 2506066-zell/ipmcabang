{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/index?segment=auth&action=login"
    },
    {
      "source": "/api/auth/register",
      "destination": "/api/index?segment=auth&action=register"
    },
    {
      "source": "/api/auth/adminLogin",
      "destination": "/api/index?segment=auth&action=adminLogin"
    },
    {
      "source": "/api/auth/promoteAdmin",
      "destination": "/api/index?segment=auth&action=promoteAdmin"
    },
    {
      "source": "/api/auth/seedAdmins",
      "destination": "/api/index?segment=auth&action=seedAdmins"
    },
    {
      "source": "/api/dbHealth",
      "destination": "/api/index?action=dbHealth"
    },
    {
      "source": "/api/health",
      "destination": "/api/index?action=health"
    },
    {
      "source": "/api/migrate",
      "destination": "/api/index?segment=admin&action=migrate"
    },
    {
      "source": "/api/resetSet",
      "destination": "/api/index?segment=admin&action=resetSet"
    },
    {
      "source": "/api/notifications",
      "destination": "/api/index?segment=users&action=notifications"
    },
    {
      "source": "/api/admin/users",
      "destination": "/api/index?segment=users"
    },
    {
      "source": "/api/admin/questions",
      "destination": "/api/index?segment=admin"
    },
    {
      "source": "/api/admin/materials",
      "destination": "/api/index?segment=admin"
    },
    {
      "source": "/api/articles",
      "destination": "/api/index?segment=articles"
    },
    {
      "source": "/api/materials",
      "destination": "/api/index?segment=materials"
    },
    {
      "source": "/api/questions",
      "destination": "/api/index?segment=questions"
    },
    {
      "source": "/api/results",
      "destination": "/api/index?segment=results"
    },
    {
      "source": "/api/users",
      "destination": "/api/index?segment=users"
    },
    {
      "source": "/api/events",
      "destination": "/api/events"
    },
    {
      "source": "/api/upload",
      "destination": "/api/upload"
    },
    {
      "source": "/api/cron/notifications",
      "destination": "/api/index?segment=admin&action=runScheduledNotifications"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/notifications",
      "schedule": "0 3 * * *"
    }
  ]
}
